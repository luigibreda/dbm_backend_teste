@model ProdutoAPI.Models.Produto

<h1>Editar Produto</h1>

<form asp-action="Edit" asp-controller="Produto" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" id="Nome" name="Nome" value="@Model.Nome" required />
        @if (ViewData.ModelState["Nome"]?.Errors.Count > 0)
        {
            <span class="text-danger">@ViewData.ModelState["Nome"].Errors[0].ErrorMessage</span>
        }
    </div>

    <div class="form-group">
        <label for="Descricao">Descrição</label>
        <input type="text" class="form-control" id="Descricao" name="Descricao" value="@Model.Descricao" required />
    </div>

    <div class="form-group">
        <label for="Preco">Preço</label>
        @if (ViewData.ModelState["Preco"]?.Errors.Count > 0)
        {
            <span class="text-danger">@ViewData.ModelState["Preco"].Errors[0].ErrorMessage</span>
        }
        <!-- Use ToString("F2") for displaying the value -->
        <input type="number" step="0.01" class="form-control" id="Preco" name="Preco" value="@Model.Preco.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture)" required />
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a href="@Url.Action("Index", "Produto")" class="btn btn-secondary">Cancelar</a>
</form>
